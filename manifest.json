{
  "manifest_version": 3,
  "name": "QuickShare - QR Code Generator",
  "version": "1.0.0",
  "description": "Instantly generate QR codes for any webpage and share it with your phone. Scan to open in seconds!",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
