{
  "manifest_version": 1,
  "name": "QuickShare - QR Code Generator",
  "version": "1.0.0",
  "description": "Instantly generate QR codes for any webpage and open it on your phone in seconds.",

  "permissions": [
    "activeTab"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open QuickShare QR Code Generator"
    }
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
